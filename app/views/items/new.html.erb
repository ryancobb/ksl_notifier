<%= form_for @item do |f| %>
  <div class="field">
    <%= f.label :name, :class => "label" %>
    <div class="control">
      <%= f.text_field :name, :class => "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :search_url, :class => "label" %>
    <div class="control">
      <%= f.text_field :search_url, :class => "input" %>
    </div>
  </div>

  <%= f.submit :class => "button is-primary" %>
<% end %>